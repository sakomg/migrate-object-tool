{
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ],
  "singleQuote": true,
  "trailingComma": "none",
  "arrowParens": "always",
  "tabWidth": 2,
  "printWidth": 130,
  "semi": false
}

